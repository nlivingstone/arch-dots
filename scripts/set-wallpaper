
#!/bin/bash

# This script will randomly go through the files of a directory, setting it
# up as the wallpaper at regular intervals
#
# NOTE: this script is in bash (not posix shell), because the RANDOM variable
# we use is not defined in posix

swww query || swww init

if [[ $# -lt 1 ]] || [[ ! -d $1   ]]; then
	echo "Usage:
	$0 <dir containg images>"
	exit 1
fi

function get_wallpaper () {
	echo $(find "$1" \
		| while read -r img; do
			echo "$((RANDOM % 1000)): $img"
		done \
		| tail -n +2 \
		| sort -n \
		| cut -d' ' -f2- \
		| head -n 1)
}

SWWW_WALLPAPER_DIR="$1"
SWWW_TRANSITION_FPS=60
SWWW_TRANSITION_STEP=20
SWWW_TRANSITION_TYPE=center
SWWW_TRANSITION_EASING="@TODO"
SWWW_CURRENT_WALLPAPER=$(get_wallpaper $SWWW_WALLPAPER_DIR)


swww img $SWWW_CURRENT_WALLPAPER --transition-type $SWWW_TRANSITION_TYPE --transition-step $SWWW_TRANSITION_STEP --transition-fps $SWWW_TRANSITION_FPS


# @TODO: Write current wallpaper path to a file so it can be used by swawlock and others
